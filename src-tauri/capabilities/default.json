{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-set-always-on-top",
    "core:window:allow-hide",
    "core:window:allow-show",
    "core:window:allow-set-decorations",
    "global-shortcut:allow-is-registered",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister-all",
    "fs:default",
    "opener:allow-open-url",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$LOCALDATA/**"
        },
        {
          "path": "$EXE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "$LOCALDATA/**"
        },
        {
          "path": "$EXE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file-lines",
      "allow": [
        {
          "path": "$LOCALDATA/**"
        },
        {
          "path": "$EXE/**"
        }
      ]
    },
    "os:default",
    "os:allow-hostname",
    "websocket:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://192.168.31.173:*"
        },
        {
          "url": "http://192.168.31.173:*"
        },
        {
          "url": "https://localhost:*"
        },
        {
          "url": "https://glz-eu-1.eu.a.pvp.net:*"
        },
        {
          "url": "https://pd.eu.a.pvp.net:*"
        },
        {
          "url": "https://valorant-api.com:*"
        },
        {
          "url": "https://*.pvp.net:*"
        },
        {
          "url": "https://gist.githubusercontent.com/tsecret/0b5f7094000f4063d72276c5e05824aa/*"
        }
      ]
    },
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install",
    "process:allow-restart",
    "store:default",
    "sql:default",
    "sql:allow-execute"
  ]
}
